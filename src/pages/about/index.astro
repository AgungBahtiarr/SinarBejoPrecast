---
import FeaturesStats from "@/components/sections/features/FeaturesStats.astro"
import MainLayout from "@/layouts/MainLayout.astro"
---
<MainLayout
  title={"Tentang Kami"}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://sinarbejoprecast.com/contact",
    "url": "https://sinarbejoprecast.com/contact",
    "name": "Hubungi Kami | SinarBejoPrecast",
    "description":
      "Punya pertanyaan atau ingin mendiskusikan hal lainnya? Hubungi kami dengan form dibawah atau chat di nomor whatsapp kami.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://sinarbejoprecast.com",
      "name": "SinarBejoPrecast",
      "description":
        "SinarBejoPrecast menyediakan produk beton berkualitas untuk keperluan proyek konstruksi anda.",
    },
    "inLanguage": "id-ID"
  }}
>
